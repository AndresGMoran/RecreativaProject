<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scoreLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/score_banner"
        android:layout_width="412dp"
        android:layout_height="150dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/tvGameNameScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="136dp"
        android:layout_marginTop="49dp"
        android:layout_marginEnd="137dp"
        android:fontFamily="@font/bakbak_one"
        android:text="TextView"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvLastGameScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/bakbak_one"
        android:text="TextView"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="@+id/isWin_img"
        app:layout_constraintStart_toStartOf="@+id/isWin_img"
        app:layout_constraintTop_toBottomOf="@+id/isWin_img" />

    <Button
        android:id="@+id/playAgainButton"
        android:layout_width="228dp"
        android:layout_height="56dp"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/bakbak_one"
        android:text="Button"
        app:layout_constraintEnd_toEndOf="@+id/tvLastGameScore"
        app:layout_constraintStart_toStartOf="@+id/tvLastGameScore"
        app:layout_constraintTop_toBottomOf="@+id/tvLastGameScore" />

    <Button
        android:id="@+id/exitButton"
        android:layout_width="228dp"
        android:layout_height="56dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/bakbak_one"
        android:text="Button"
        app:layout_constraintEnd_toEndOf="@+id/playAgainButton"
        app:layout_constraintStart_toStartOf="@+id/playAgainButton"
        app:layout_constraintTop_toBottomOf="@+id/playAgainButton" />

    <ImageView
        android:id="@+id/isWin_img"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_marginTop="70dp"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="@+id/tvGameNameScore"
        app:layout_constraintStart_toStartOf="@+id/tvGameNameScore"
        app:layout_constraintTop_toBottomOf="@+id/tvGameNameScore"
        tools:srcCompat="@tools:sample/avatars" />

</androidx.constraintlayout.widget.ConstraintLayout>